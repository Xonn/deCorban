{% extends 'base.html.twig' %}

{% block title %}Les modèles{% endblock %}

{% block body %}
    <div class="wrapper image-wrapper bg-image inverse-text" data-image-src="style/images/art/bg20.jpg" style="background-image: url(style/images/art/bg20.jpg);">
        <div class="container inner pb-120 pt-120">
            <h2 class="sub-heading2 text-center text-uppercase letterspace-8">Découvrez les modèles</h2>
        </div>
    </div>

    <div class="wrapper light-wrapper">
      <div class="container">
        <div class="space50"></div>
        <div class="section-title-underline"></div>
        <div class="space70"></div>
        <div class="swiper-container-wrapper image-grid swiper-col4" data-aos="fade">
          <div class="swiper-container text-center">
            <div class="swiper-wrapper">
              {% for model in models %}
                  <div class="swiper-slide">
                  <figure class="overlay overlay5 model">
                      <a href="{{ path('model.show', {slug: model.slug}) }}"><img src="{{ vich_uploader_asset(model, 'imageFile') }}" alt="" /></a>
                      <figcaption class="d-flex">
                        <div class="align-self-end mx-auto">
                            <h4 class="mb-0">{{ model.name }}</h4>
                        </div>
                      </figcaption>
                  </figure>
                  </div>
                  <!--/.swiper-slide -->
              {% endfor %}
            </div>
            <!-- /.swiper-wrapper --> 
          </div>
        <!-- .swiper-container -->
        <div class="swiper-pagination gap-large"></div>
      </div>
      <!-- .swiper-container-wrapper -->
      <div class="space50"></div>
    </div>
    <!-- /.container --> 
  </div>
  <!-- /.wrapper -->
{% endblock %}