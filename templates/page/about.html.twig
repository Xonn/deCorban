{% block body %}
<div class="wrapper light-wrapper">
  <div class="container inner">
    <h1 class="section-title section-title-upper large section-title-underline text-center">À propos</h1>
    <div class="space50"></div>
    <div class="row">
      <div class="col-lg-7 text-right pr-40">
        <figure>
          <img src="{{ asset('assets/deCorban01.png') }}" alt="deCorban">
