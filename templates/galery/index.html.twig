{% extends 'base.html.twig' %}

{% block title %}Hello GaleryController!{% endblock %}

{% block body %}
<div class="wrapper image-wrapper bg-image inverse-text" data-image-src="style/images/art/bg9.jpg">
    <div class="container inner pt-120 pb-120 text-center">
      <h1 class="heading">Annuaire Des Galeries</h1>
      <p class="lead larger text-center mb-0">Iusto odit minus at odio impedit nobis quasi</p>
    </div>
    <!-- /.container --> 
  </div>
  <!-- /.wrapper -->
  <div class="wrapper light-wrapper">
    <div class="container inner">   
        <div id="cube-grid-filter" class="cbp-filter-container text-center">
                <div data-filter="*" class="cbp-filter-item-active cbp-filter-item">Tout</div>
            {% for category in categories %}
                <div data-filter=".{{ category.name|lower }}" class="cbp-filter-item">{{ category.name }}</div>
            {% endfor %}
        </div>
        <div class="clearfix"></div>
        <div class="space30"></div>

        <div id="cube-grid" class="cbp text-center">
        {% for galery in galeries %}
        <div class="cbp-item {{ galery.categoriesName }}">
            <figure class="overlay-info hovered"><a href="{{ path('galery.show', {id: galery.id}) }}"> <img src="{{ vich_uploader_asset(galery, 'thumbnailFile') }}" alt="" /></a>
                <figcaption class="d-flex">
                    <div class="align-self-center mx-auto">
                        <h4 class="mb-0 text-uppercase letterspace-4">{{ galery.title }}</h4>
                    </div>
                </figcaption>
            </figure>
        </div>
        <!--/.cbp-item -->
        {% endfor %}
      </div>
      <!--/.cbp --> 
    </div>
    <!-- /.container --> 
  </div>
  <!-- /.wrapper -->
{% endblock %}
