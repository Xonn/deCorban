{% extends 'base.html.twig' %}

{% set title = 'Connexion' %}

{% block body %}
<div class="wrapper pattern-wrapper bg-image" data-image-src="{{ asset('style/images/art/bg17.jpg') }}" style="background-image: url({{ asset('style/images/art/bg17.jpg') }});">
    <div class="container inner">
        <div class="row">
            <div class="security-form col-lg-10 offset-lg-1 col-xl-6 offset-xl-3 bg-white">
            <span class="vertical_logo fill-light size-200">
                {{ include('icon/vertical_logo.html.twig') }}
            </span>
                {% for message in app.flashes('verify_email_error') %}
                    <div class="alert alert-danger mb-30">
                        {{ message }}
                    </div>
                {% endfor %}
                {% for message in app.flashes('success') %}
                    <div class="alert alert-success mb-30">
                        {{ message }}
                    </div>
                {% endfor %}
                {% if error %}
                    <div class="alert alert-danger mb-30">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                {% endif %}
                <h1 class="section-title section-title-upper large section-title-underline text-center">Connexion</h1>
                <div class="space50"></div>
                <form action="{{ path('security_login') }}" method="post">
                    <div class="row">
                        <div class="col-10 offset-1">
                            <div class="form-group">
                                {# <label for="_username">Adresse email</label> #}
                                <input name="_username" placeholder="Nom d'utilisateur" required type="text" class="form-control" value="{{ last_username }}">
                            </div>
                        </div>
                        <div class="col-10 offset-1">
                            <div class="form-group">
                                {# <label for="_username">Mot de passe</label> #}
                                <input name="_password" placeholder="Mot de passe..." required type="password" class="form-control">
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-10 offset-1 text-right mb-15">
                            <a href="{{ path('app_forgot_password_request') }}">mot de passe oubli√© ?</a>
                        </div>
                        <div class="col-10 col-md-5 offset-1">
                            <div class="form-group">
                                <div class="custom-control custom-checkbox">
                                    <input class="custom-control-input" type="checkbox" id="remember_me" name="_remember_me" checked/>
                                    <label class="custom-control-label" for="remember_me">Se souvenir moi</label>
                                </div>
                            </div>
                        </div>
                        <div class="col-10 offset-1 col-md-5">
                            <div class="form-group">
                                <button type="submit" class="btn btn-xs btn-dark">Se connecter</button>
                            </div>
                        </div>
                        <div class="col-10 offset-1 text-center">
                                Vous n'avez pas de compte ? <a href="{{ path('security_registration') }}">Inscrivez-vous !</a>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
{% endblock %}
