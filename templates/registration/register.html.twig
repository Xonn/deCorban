{% extends 'base.html.twig' %}
{% form_theme form with ['form/form_row.html.twig', 'form/form_errors.html.twig'] %}

{% block title %}Inscription{% endblock %}

{% block body %}
<div class="wrapper pattern-wrapper bg-image" data-image-src="{{ asset('style/images/art/bg17.jpg') }}" style="background-image: url({{ asset('style/images/art/bg17.jpg') }});">
        <div class="container inner">
            <div class="row">
                <div class="security-form col-lg-10 offset-lg-1 col-xl-6 offset-xl-3 bg-white">
                    <h2 class="section-title section-title-upper large section-title-underline text-center">S'inscrire</h2>
                    <div class="space50"></div>

                    {{ form_start(form) }}
                    <div class="row">
                        {#<div class="col-md-3 form-avatar">
                            <div class="avatar-container">
                                <div class="user icon icon-round overlay">
                                    <img src="{{asset('assets/blank-avatar.png')}}" alt="Avatar de l'utilisateur" id="avatar">
                                    <div id="edit-avatar" style="font-size:13px;">Modifier</div>
                                </div>
                                <div id="delete-avatar" role="button"></div>
                            </div>
                            {{ form_widget(form.imageFile, {'label' : 'Avatar', 'class' : 'form-control'}) }}
                        </div>
                        <div class="col-md-9"> #}
                        <div class="col-10 offset-1">
                            <div class="form-group">
                                {{ form_row(form.username, {'attr': {'placeholder' : 'Nom d\'utilisateur', 'class' : 'form-control'}}) }}
                            </div>
                        </div>
                        <div class="col-10 offset-1">
                            <div class="form-group">
                                {{ form_row(form.email, {'attr': {'placeholder' : 'Adresse email', 'class' : 'form-control'}}) }}
                            </div>
                        </div>

                        <div class="col-10 offset-1">
                            <div class="form-group">
                                {{ form_row(form.password.first, {'attr': {'placeholder' : 'Mot de passe', 'class' : 'password-field form-control'}}) }}
                            </div>
                        </div>

                        <div class="col-10 offset-1">
                            <div class="form-group">
                                {{ form_row(form.password.second, {'attr': {'placeholder' : 'Confimer le mot de passe', 'class' : 'password-field form-control'}}) }}
                            </div>
                        </div>

                        {# <div class="col-10 offset-1">
                            <div class="form-group">
                                <div class="custom-control custom-checkbox">
                                    {{ form_widget(form.agreeTerms, {'attr': {'class' : 'custom-control-input'}}) }}
                                    {{ form_label(form.agreeTerms, null, {'label': "J'accepte les CGU", 'label_attr': {'class' : 'custom-control-label'}}) }}
                                </div>
                            </div>
                        </div> #}

                        <div class="col-10 offset-1 text-right mt-20">
                            <div class="form-group">
                                <button type="submit" class="btn btn-xs btn-dark">S'inscrire</button>
                            </div>
                        </div>
                    </div>
                    <div class="col-10 offset-1 text-center">
                                Vous êtes déjà membre ? <a href="{{ path('security_login') }}">Connectez-vous !</a>
                    </div>

                    {{ form_end(form) }}
                </div>
            </div>
    </div>
</div>
{% endblock %}
