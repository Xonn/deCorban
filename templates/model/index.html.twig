{% extends 'base.html.twig' %}

{% block title %}Hello GaleryController!{% endblock %}

{% block body %}
    <div class="wrapper image-wrapper bg-image inverse-text" data-image-src="style/images/art/bg20.jpg" style="background-image: url(style/images/art/bg20.jpg);">
        <div class="container inner pb-230 pt-150">
            <h2 class="section-title larger section-title-upper  text-center">DÃ©couvrez les corbettes</h2>
        </div>
    </div>

    <div class="wrapper light-wrapper">
      <div class="container inner">
        <h2 class="section-title text-center">My Portfolio</h2>
        <p class="lead2 text-center">Great photography comes with understanding customer needs</p>
        <div class="space30"></div>
        <div class="swiper-container-wrapper image-grid swiper-col4" data-aos="fade">
          <div class="swiper-container text-center">
            <div class="swiper-wrapper">
              {% for model in models %}
                  <div class="swiper-slide">
                  <figure class="overlay overlay5 model">
                      <a href="{{ path('model.show', {id: model.id}) }}"><img src="{{ vich_uploader_asset(model, 'imageFile') }}" alt="" /></a>
                      <figcaption class="d-flex">
                        <div class="align-self-end mx-auto">
                            <h4 class="mb-0">{{ model.name }}</h4>
                        </div>
                      </figcaption>
                  </figure>
                  </div>
                  <!--/.swiper-slide -->
              {% endfor %}
            </div>
            <!-- /.swiper-wrapper --> 
          </div>
        <!-- .swiper-container -->
        <div class="swiper-pagination gap-large"></div>
      </div>
      <!-- .swiper-container-wrapper --> 
    </div>
    <!-- /.container --> 
  </div>
  <!-- /.wrapper -->
{% endblock %}