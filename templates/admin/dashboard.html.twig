{% extends '@EasyAdmin/layout.html.twig' %}

{% block main %}

<h1 class="title">Dashboard</h1>
<div class="content-panel bg-grey">
    <div class="container">
        <div class="row">
            {% for item in data %}
            <div class="col-xl-4 col-md-6 mb-4 mt-4">
                <div class="card {{ item.class }} text-white shadow py-2">
                    <div class="card-body">
                        <div class="row no-gutters align-items-center">
                            <div class="col mr-2">
                                <div class="text-xs font-weight-bold text-uppercase mb-1">{{ item.name }}</div>
                                <div class="h5 mb-0 font-weight-bold text-gray-800">{{ item.count }}</div>
                            </div>
                            <div class="col-auto">
                                <i class="{{ item.icon }} fa-2x text-gray-300"></i>
                            </div>
                        </div>
                    </div>
                    <div class="card-footer text-center">
                        <a href="{{ item.list_url }}" class="btn btn-outline-dark">
                            <i class="fa-fw far fa-list-alt"></i>
                            <span>Liste des {{ item.name }}</span>
                        </a>
                    </div>
                </div>
                <hr>
                {% if item.display is defined %}
                <table class="table table-striped table-dark mt-4 mb-0">
                    <thead>
                        <tr>
                            {% for column in item.columns %}
                            <th scope="col">{{ column }}</th>
                            {% endfor %}
                        </tr>
                    </thead>
                    <tbody>
                        {% for entry in item.display %}
                        <tr>
                            {% for key, value in item.columns %}
                            {% if key == 'id' %}
                            <th>
                                <a href="{{ entry.edit_url }}"><i class="text-white fa-fw far fa-edit"> </i></a>
                                {{ attribute(entry, key) }}
                            </th>
                            {% else %}
                            <th>{{ attribute(entry, key) }}</th>
                            {% endif %}
                            {% endfor %}

                        </tr>
                        {% endfor %}
                    </tbody>
                </table>
                {% else %}
                <div class="card bg-dark text-white shadow">
                    <div class="card-body">
                        Aucun résultat trouvé
                    </div>
                </div>
                {% endif %}
            </div>
            {% endfor %}
