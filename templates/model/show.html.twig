{% import 'component/macros.html.twig' as macros %}
{% extends 'base.html.twig' %}

{% block title %}Modèle - {{ model.name }}{% endblock %}

{% block body %}
    <div class="wrapper image-wrapper bg-image inverse-text" data-image-src="{{ vich_uploader_asset(model, 'imageFile') }}" style="{{ vich_uploader_asset(model, 'imageFile') }}">
        <div class="container inner pb-300 pt-130"> 
        </div>
    </div>

    <div class="wrapper light-wrapper">
        <div class="container inner">
            <div class="row">
                <div class="col-md-4 offset-1">
                    <figure class="overlay-info bevel">
                        {{ macros.image(
                            vich_uploader_asset(model, 'imageFile'),
                            360,
                            360,
                            {'class': 'img-fluid', 'alt': 'Portrait du modèle "' ~ model.name ~ '"'},
                        ) }}  
                    </figure>
                </div>
                <div class="col-md-6">
                    <h1 class="section-title section-title-upper text-left">
                        {{ model.name }}
                        {% if model.instagram %}
                            <a href="{{ model.instagram }}" target="_blank"> <i class="fa fa-instagram"></i></a>
                        {% endif %}
                    </h1>

                    {% if model.age %} <i class="fa fa-birthday-cake"></i> {{ model.age }} ans {% endif %}
                    {% if model.height %} | <i class="si-design_ruler-2"></i> {{ model.heightFormatted }} {% endif %}
                    {% if model.country or model.city %}
                        | <i class="fa fa-map-marker"></i> 
                        {% if model.country and model.city %}
                            {{ model.country }}, {{ model.city }}
                        {% elseif model.country %} 
                            {{ model.country }}
                        {% elseif model.city %} 
                            {{ model.city }}
                        {% endif %}
                    {% endif %}
                    <p>{{ model.description|raw }}</p>
                </div>
            </div>
        </div>
        <!-- /.container --> 
    </div>
    <!-- /.wrapper -->

    {% if model.galeries is not empty %}
        <div class="wrapper pt-10 pb-80 light-wrapper">
            <div class="container-fluid pl-100 pr-100">
                <h2 class="section-title section-title-upper text-left">Ses albums</h2>
                {{ include('galery/_preview.html.twig', { galeries: model.galeries, col: '4' }) }}
            </div>
            <!-- /.container --> 
        </div>
    {% endif %}
{% endblock %}